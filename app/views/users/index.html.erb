
<h1>Listing user</h1>



<table>
  <tr>
    <th>nom</th>
    <th>email</th>
    <th>Password</th>
	<th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.nom%></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'show', user_path(user) %></td>
	  <td><%= link_to 'Edit', edit_user_path(user) %></td>
	  <td><%= link_to 'Destroy',user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>



<%= link_to 'liste_user', controller: 'users' %>

